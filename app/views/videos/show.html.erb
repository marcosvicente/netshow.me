<div class="container">
  <div class="row">
    <div class="col-md-12">
      <video-js id="vid1" width="1114" height="500" class="vjs-default-skin" controls>
        <source
          src="<%= @video.url%>"
          type="application/x-mpegURL">
      </video-js>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2><%= @video.name %></h2>
      <p>
        <%= @video.view.count %>
        <% if @video.view.count < 1%>
          Vizualization
        <% else%>
          Vizualizations
        <% end %>
      </p>
    </div>
  </div>

  <input type="hidden" name="" id="show-id-value" value=<%= @video.id %>
</div>
